<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="50dp"
    >

    <Button
        android:id="@+id/all_songs"
        style="@style/coolButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_menu"
        android:drawableRight="@drawable/ic_play_button_foreground"
        android:paddingRight="40dp"
        android:text="@string/songs"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/play_lists"
        style="@style/coolButton"
        android:background="@drawable/button_menu"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:text="@string/play_list"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textStyle="bold"
        android:paddingRight="@android:dimen/app_icon_size"
        app:layout_constraintStart_toEndOf="@+id/all_songs" />
    <Button
        android:id="@+id/artist"
        style="@style/coolButton"
        android:background="@drawable/button_menu"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:text="@string/artists"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textStyle="bold"
        android:paddingRight="@android:dimen/app_icon_size"
        app:layout_constraintStart_toEndOf="@+id/all_songs" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>